 

    <div class="container-fluid header_background">
            <div class="row">
                <div class="jumbotron">
                  <h1>Debatable</h1>
                  <h2 class="lead">The realtime debating website for all your mass debate needs.</h2>
                </div>
            </div>
    </div> 



    <!-- Page Content -->
    <div class="container-fluid">

        <!-- Page Header -->
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">
                    Top Debates
                    <small>{{ current_date }}</small>
                </h1>
            </div> 
        </div> 
		  
        <!-- Debate Topics -->
        {{#each topic_list as |current_topic|}}
            {{#ifFirst @index}}
                  <div class="row"> 
            {{/ifFirst}}
          
                     
                     




                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-image">
                                <img class="img-responsive" src="{{ current_topic.topic_image }}" alt="">
                                <span class="card-title">{{ current_topic.topic_name }}</span>
                            </div>
                            
                            <div class="card-content">
                                <p>{{ current_topic.topic_desc }}</p>
                            </div>
                            
                            <div class="card-action" align="center">
                                  {{#if ../user}}
                        <button class="btn btn-default join_debate debate_button" data-debateName = "{{ current_topic.topic_name_short }}">Join Debate</button>
                        <button class="btn btn-default spectate_debate debate_button" data-debateName = "{{ current_topic.topic_name_short }}">Spectate Debate</button>
                       {{else}} 
                        <a href="/users/login"><button class="btn btn-default" >Login to Join Debate</button></a>
                        <button class="btn btn-default spectate_debate debate_button" data-debateName = "{{ current_topic.topic_name_short }}">Spectate Debate</button>
                       {{/if}}


                            </div>
                        </div>
                    </div>

                     

            {{#ifThird @index}}
                  </div> 
            {{/ifThird}}


        {{/each}}


 

        <hr>

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a href="#">&laquo;</a>
                    </li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <hr>
 

    </div>
    <!-- /.container -->

    
 